@require 'variables.styl'

.content
  @media screen and (min-width expansion-width)
    width 70%
    height 100%
    top 0
    left 30%
    position absolute
    overflow auto

  .postlisting
    border-bottom 0.1rem solid #4492ec

    a
      text-decoration none
    p
      color #000
      font-size 0.9rem
      font-weight 200
      padding 1.5rem 2rem
      margin 0
      transition all .15s ease-in
      &:hover
        background #f5f5f5
        padding-left 50px
      time
        color #4492ec
        padding-right 1rem

  article
    padding 0 2rem
    overflow hidden
    .featureimage
      border 4px solid #333
      border-radius 4px
    .publishingdate
      text-align center
      border-bottom 2px solid #E0E1E6
      margin  0 4rem 2rem 4rem
      time
        display inline-block
        position relative
        top 0.5rem
        background #fff
        font-size 85%
        text-align center
        font-weight normal
        font-style italic
        padding 0 .5rem
    p
      font-family 'Lusitana', serif
      line-height 1.4rem
      a
        text-decoration none
        border-bottom 1px solid feature-color
        color #000
    h1
      font-weight 400
      font-size 2rem
      &.page-title
        font-size 2.2rem
        line-height 2.2rem
        text-align center
    h2
      font-size 1.8rem
      font-style italic
      font-weight 400
    h3
      font-size 1.6rem
      font-weight lighter
    h4
      font-size 1.4rem
      font-weight lighter
      text-decoration underline
      text-align center
    h5
      font-size 1.2rem
    h6
      font-size 1rem
    blockquote
      font-size inherit
      font-family 'Open Sans', sans-serif
      color #333
      border-left 6px solid #39f
      padding 0 34px
      margin 40px 0
      line-height 165%
      padding 0 20px
      border-left 4px solid #39f
      p
        padding-left 0!important
        padding-right 0!important
    img
      max-width 100%
      max-height 100%
      display block
      margin 1em auto